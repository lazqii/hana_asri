<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FF914C"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/namaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:text="Nadia Hidayanti S"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jabatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="60dp"
            android:text="Manajer"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </androidx.cardview.widget.CardView>



    <RelativeLayout
        android:id="@+id/subMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:gravity="center"
            android:text="Rabu, 11 Oktober 2023\n"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:background="@drawable/bg_orange"
            android:elevation="2dp"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_marginTop="-35dp"
            android:layout_below="@+id/tanggal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPresensi"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:layout_below="@+id/tanggal"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/presensi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presensi"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnTugas"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:layout_below="@+id/tanggal"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/tugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tugas"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPerizinan"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:elevation="10dp"
                android:layout_below="@+id/tanggal"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/perizinan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perizinan"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

        </TableRow>

    </RelativeLayout>

    <TextView
        android:id="@+id/aktivitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktivitas Terkini"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/subMenu"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints" />

